# BRIEF: Automated release workflow for Dolibarr modules
# NOTE: Creates release packages and publishes to GitHub Releases following main > dev > rc > version > main cycle

name: Create Release

on:
  push:
    branches:
      - 'main'
      - 'rc/**'
    tags:
      - 'v*.*.*'
  workflow_dispatch:
    inputs:
      version:
        description: 'Release version (e.g., 1.0.0)'
        required: true
        type: string
      prerelease:
        description: 'Mark as pre-release (use for RC releases)'
        required: false
        type: boolean
        default: false

permissions:
  contents: write

jobs:
  build:
    name: Build Release Package
    runs-on: ubuntu-latest
    outputs:
      skip_build: ${{ steps.version.outputs.skip_build }}
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup PHP
        uses: shivammathur/setup-php@v2
        with:
          php-version: '8.1'
          extensions: mbstring, xml, zip, gd, curl
          tools: composer:v2

      - name: Determine version and prerelease status
        id: version
        run: |
          # Function to check for development version and exit early to skip build
          # Uses exit 0 (not return) to terminate the entire step and trigger skip_build conditional
          check_development_version() {
            local version="$1"
            local context="$2"
            if [[ "$version" == "development" ]]; then
              echo "::warning::Skipping release build for development version${context:+ $context}. Use workflow_dispatch or push a version tag to create a release."
              echo "skip_build=true" >> $GITHUB_OUTPUT
              exit 0  # Exit step entirely to skip subsequent build steps
            fi
          }

          if [ "${{ github.event_name }}" == "workflow_dispatch" ]; then
            VERSION="${{ inputs.version }}"
            PRERELEASE="${{ inputs.prerelease }}"
          elif [ "${{ github.ref_type }}" == "tag" ]; then
            VERSION=${GITHUB_REF#refs/tags/v}
            # Check if it's an RC tag
            if [[ "$VERSION" == *"-rc"* ]]; then
              PRERELEASE="true"
            else
              PRERELEASE="false"
            fi
          elif [[ "${{ github.ref }}" == refs/heads/rc/* ]]; then
            # RC branch push - mark as prerelease
            VERSION=$(grep -oP 'VERSION:\s*\K[^\s]+' README.md || echo "0.0.0")
            check_development_version "$VERSION" "on RC branch"
            PRERELEASE="true"
          else
            # Main branch or other
            VERSION=$(grep -oP 'VERSION:\s*\K[^\s]+' README.md || echo "0.0.0")
            check_development_version "$VERSION"
            PRERELEASE="false"
          fi
          
          # Lines below only executed if version is not "development" (no early exit)
          echo "version=${VERSION}" >> $GITHUB_OUTPUT
          echo "prerelease=${PRERELEASE}" >> $GITHUB_OUTPUT
          echo "skip_build=false" >> $GITHUB_OUTPUT
          echo "Building version: ${VERSION} (prerelease: ${PRERELEASE})"

      - name: Install dependencies
        if: steps.version.outputs.skip_build != 'true'
        run: |
          if [ -f "composer.json" ]; then
            composer install --no-dev --optimize-autoloader
          fi

      - name: Update version in module descriptor
        if: steps.version.outputs.skip_build != 'true'
        run: |
          VERSION="${{ steps.version.outputs.version }}"
          # Update version in core/modules/mod*.class.php
          if [ -d "core/modules" ]; then
            find core/modules -name "mod*.class.php" -type f -exec sed -i "s/\$this->version = '[^']*'/\$this->version = '${VERSION}'/g" {} \;
            echo "- âœ… Updated version in module descriptor" >> $GITHUB_STEP_SUMMARY
          fi

      - name: Create package structure
        if: steps.version.outputs.skip_build != 'true'
        run: |
          mkdir -p build/package
          
          # Copy module files (excluding development files)
          rsync -av --exclude='build' \
                    --exclude='tests' \
                    --exclude='.git*' \
                    --exclude='composer.json' \
                    --exclude='composer.lock' \
                    --exclude='phpunit.xml*' \
                    --exclude='phpcs.xml*' \
                    --exclude='phpstan.neon*' \
                    --exclude='psalm.xml*' \
                    --exclude='node_modules' \
                    --exclude='.github' \
                    --exclude='package.json' \
                    --exclude='package-lock.json' \
                    . build/package/

      - name: Determine module name
        if: steps.version.outputs.skip_build != 'true'
        id: module
        run: |
          # Try to extract module name from module descriptor
          if [ -d "core/modules" ]; then
            MOD_FILE=$(find core/modules -name "mod*.class.php" -type f | head -1)
            if [ -n "$MOD_FILE" ]; then
              MODULE_NAME=$(basename "$MOD_FILE" .class.php | sed 's/^mod//')
            else
              MODULE_NAME=$(basename $GITHUB_REPOSITORY | sed 's/^MokoDoli//' | sed 's/^dolibarr-//')
            fi
          else
            MODULE_NAME=$(basename $GITHUB_REPOSITORY | sed 's/^MokoDoli//' | sed 's/^dolibarr-//')
          fi
          echo "name=${MODULE_NAME}" >> $GITHUB_OUTPUT
          echo "Module name: ${MODULE_NAME}"

      - name: Create ZIP package
        if: steps.version.outputs.skip_build != 'true'
        run: |
          cd build/package
          MODULE_NAME="${{ steps.module.outputs.name }}"
          VERSION="${{ steps.version.outputs.version }}"
          ZIP_NAME="${MODULE_NAME}-${VERSION}.zip"
          zip -r "../${ZIP_NAME}" .
          cd ../..
          echo "ZIP_NAME=${ZIP_NAME}" >> $GITHUB_ENV
          echo "Created package: ${ZIP_NAME}" >> $GITHUB_STEP_SUMMARY

      - name: Generate checksums
        if: steps.version.outputs.skip_build != 'true'
        run: |
          cd build
          sha256sum "${ZIP_NAME}" > "${ZIP_NAME}.sha256"
          md5sum "${ZIP_NAME}" > "${ZIP_NAME}.md5"
          echo "- âœ… Generated checksums" >> $GITHUB_STEP_SUMMARY

      - name: Upload build artifacts
        if: steps.version.outputs.skip_build != 'true'
        uses: actions/upload-artifact@v4
        with:
          name: release-package
          path: |
            build/*.zip
            build/*.sha256
            build/*.md5
          retention-days: 90

  release:
    name: Create GitHub Release
    runs-on: ubuntu-latest
    needs: build
    if: needs.build.outputs.skip_build != 'true'
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Download build artifacts
        uses: actions/download-artifact@v4.1.3
        with:
          name: release-package
          path: ./artifacts

      - name: Get version and prerelease status
        id: version
        run: |
          if [ "${{ github.event_name }}" == "workflow_dispatch" ]; then
            VERSION="${{ inputs.version }}"
            PRERELEASE="${{ inputs.prerelease }}"
          elif [ "${{ github.ref_type }}" == "tag" ]; then
            VERSION=${GITHUB_REF#refs/tags/v}
            if [[ "$VERSION" == *"-rc"* ]]; then
              PRERELEASE="true"
            else
              PRERELEASE="false"
            fi
          elif [[ "${{ github.ref }}" == refs/heads/rc/* ]]; then
            VERSION=$(grep -oP 'VERSION:\s*\K[^\s]+' README.md || echo "0.0.0")
            PRERELEASE="true"
          else
            VERSION=$(grep -oP 'VERSION:\s*\K[^\s]+' README.md || echo "0.0.0")
            PRERELEASE="false"
          fi
          echo "version=${VERSION}" >> $GITHUB_OUTPUT
          echo "prerelease=${PRERELEASE}" >> $GITHUB_OUTPUT

      - name: Extract changelog
        id: changelog
        run: |
          if [ -f "CHANGELOG.md" ]; then
            # Extract changelog for this version
            VERSION="${{ steps.version.outputs.version }}"
            awk "/## \[${VERSION}\]/,/## \[/{if(/## \[${VERSION}\]/)print;else if(/## \[/)exit;else print}" CHANGELOG.md > release_notes.md
            
            if [ ! -s release_notes.md ]; then
              echo "Release ${VERSION}" > release_notes.md
              echo "" >> release_notes.md
              echo "See CHANGELOG.md for details." >> release_notes.md
            fi
          else
            echo "Release ${VERSION}" > release_notes.md
            echo "" >> release_notes.md
            echo "Dolibarr module release package." >> release_notes.md
          fi

      - name: Create GitHub Release
        uses: softprops/action-gh-release@v1
        with:
          tag_name: v${{ steps.version.outputs.version }}
          name: Release ${{ steps.version.outputs.version }}
          body_path: release_notes.md
          files: |
            artifacts/*.zip
            artifacts/*.sha256
            artifacts/*.md5
          draft: false
          prerelease: ${{ steps.version.outputs.prerelease }}
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

      - name: Upload to FTP/SFTP
        if: |
          (steps.version.outputs.prerelease == 'true' || steps.version.outputs.prerelease == 'false') &&
          secrets.FTP_HOST != ''
        env:
          FTP_HOST: ${{ secrets.FTP_HOST }}
          FTP_USERNAME: ${{ secrets.FTP_USERNAME }}
          FTP_PASSWORD: ${{ secrets.FTP_PASSWORD }}
          FTP_KEY: ${{ secrets.FTP_KEY }}
          FTP_PATH: ${{ secrets.FTP_PATH }}
          FTP_PORT: ${{ secrets.FTP_PORT }}
          FTP_PATH_SUFFIX: ${{ vars.FTP_PATH_SUFFIX }}
          VERSION: ${{ steps.version.outputs.version }}
          PRERELEASE: ${{ steps.version.outputs.prerelease }}
        run: |
          set -euo pipefail
          
          # Setup cleanup trap to remove sensitive files
          cleanup() {
            rm -f ~/.ssh/deploy_key "$upload_log" 2>/dev/null || true
          }
          trap cleanup EXIT
          
          # Determine channel based on release type
          if [ "$PRERELEASE" = "true" ]; then
            CHANNEL="rc"
          else
            CHANNEL="stable"
          fi
          
          # Find the ZIP file in artifacts using more robust approach
          ZIP_FILE=$(find artifacts -maxdepth 1 -name "*.zip" -type f | head -1)
          if [ -z "$ZIP_FILE" ] || [ ! -f "$ZIP_FILE" ]; then
            echo "âš ï¸ No ZIP file found in artifacts, skipping FTP upload" >> $GITHUB_STEP_SUMMARY
            exit 0
          fi
          
          ZIP_NAME=$(basename "$ZIP_FILE")
          
          # Install SFTP client
          sudo apt-get update -qq
          sudo apt-get install -y lftp openssh-client
          
          # Determine authentication mode
          AUTH_MODE="password"
          if [ -n "${FTP_KEY:-}" ]; then
            AUTH_MODE="key"
          fi
          
          # Validate required credentials
          if [ -z "${FTP_HOST:-}" ] || [ -z "${FTP_USERNAME:-}" ] || [ -z "${FTP_PATH:-}" ]; then
            echo "âš ï¸ FTP credentials incomplete, skipping upload" >> $GITHUB_STEP_SUMMARY
            exit 0
          fi
          
          if [ "$AUTH_MODE" = "password" ] && [ -z "${FTP_PASSWORD:-}" ]; then
            echo "âš ï¸ FTP_PASSWORD required for password authentication, skipping upload" >> $GITHUB_STEP_SUMMARY
            exit 0
          fi
          
          # Setup SSH key if using key authentication
          if [ "$AUTH_MODE" = "key" ]; then
            mkdir -p ~/.ssh
            chmod 700 ~/.ssh
            echo "$FTP_KEY" > ~/.ssh/deploy_key
            chmod 600 ~/.ssh/deploy_key
            
            # Add host to known_hosts
            ssh-keyscan -H "$FTP_HOST" >> ~/.ssh/known_hosts 2>/dev/null || true
          fi
          
          # Construct remote path
          PORT="${FTP_PORT:-22}"
          SUFFIX="${FTP_PATH_SUFFIX:-}"
          if [ -n "$SUFFIX" ]; then
            REMOTE_PATH="${FTP_PATH%/}/${SUFFIX#/}/${CHANNEL}"
          else
            REMOTE_PATH="${FTP_PATH%/}/${CHANNEL}"
          fi
          
          # Prepare host:port
          if [ "$PORT" != "22" ]; then
            HOSTPORT="${FTP_HOST}:${PORT}"
          else
            HOSTPORT="$FTP_HOST"
          fi
          
          echo "### ðŸ“¤ FTP Upload" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "- **Host:** $FTP_HOST" >> $GITHUB_STEP_SUMMARY
          echo "- **Port:** $PORT" >> $GITHUB_STEP_SUMMARY
          echo "- **Path:** $REMOTE_PATH" >> $GITHUB_STEP_SUMMARY
          echo "- **Channel:** $CHANNEL" >> $GITHUB_STEP_SUMMARY
          echo "- **File:** $ZIP_NAME" >> $GITHUB_STEP_SUMMARY
          echo "- **Auth:** $AUTH_MODE" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          
          # Upload via SFTP using lftp with secure credential handling
          upload_log=$(mktemp)
          
          # Create lftp script with credentials from environment
          if [ "$AUTH_MODE" = "key" ]; then
            CONNECT="set sftp:connect-program 'ssh -a -x -i ~/.ssh/deploy_key -o PubkeyAuthentication=yes -o PasswordAuthentication=no'"
            OPEN="open -u '${FTP_USERNAME}', sftp://${HOSTPORT}"
          else
            # Use LFTP_PASSWORD environment variable for password (more secure than command line)
            export LFTP_PASSWORD="$FTP_PASSWORD"
            CONNECT="set sftp:connect-program 'ssh -a -x -o PubkeyAuthentication=no -o PasswordAuthentication=yes'"
            OPEN="open -u '${FTP_USERNAME}', sftp://${HOSTPORT}"
          fi
          
          set +e
          lftp -e "\
            set sftp:auto-confirm yes; \
            set net:timeout 30; \
            set net:max-retries 3; \
            set net:reconnect-interval-base 5; \
            ${CONNECT}; \
            ${OPEN}; \
            mkdir -p '${REMOTE_PATH}'; \
            cd '${REMOTE_PATH}'; \
            put -E '${ZIP_FILE}'; \
            ls -l; \
            bye" >"$upload_log" 2>&1
          rc=$?
          set -e
          
          # Sanitize log to remove potential sensitive information
          sanitize_log() {
            sed -e "s/${FTP_HOST//./\\.}/[FTP_HOST]/g" \
                -e "s/${FTP_USERNAME//./\\.}/[FTP_USER]/g" \
                -e "s/${REMOTE_PATH//\//\\/}/[REMOTE_PATH]/g" \
                "$1"
          }
          
          if [ $rc -eq 0 ]; then
            echo "âœ… Successfully uploaded to SFTP" >> $GITHUB_STEP_SUMMARY
            # Use portable file size detection
            ZIP_SIZE=$(wc -c < "$ZIP_FILE" 2>/dev/null || echo "unknown")
            echo "- **Size:** $ZIP_SIZE bytes" >> $GITHUB_STEP_SUMMARY
          else
            echo "âŒ FTP upload failed (exit code: $rc)" >> $GITHUB_STEP_SUMMARY
            echo "<details><summary>Upload log (sanitized)</summary>" >> $GITHUB_STEP_SUMMARY
            echo "" >> $GITHUB_STEP_SUMMARY
            echo "\`\`\`" >> $GITHUB_STEP_SUMMARY
            sanitize_log "$upload_log" | tail -n 100 >> $GITHUB_STEP_SUMMARY || true
            echo "\`\`\`" >> $GITHUB_STEP_SUMMARY
            echo "</details>" >> $GITHUB_STEP_SUMMARY
            exit 1
          fi


      - name: Release Summary
        run: |
          echo "## ðŸŽ‰ Release Created" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "**Version:** ${{ steps.version.outputs.version }}" >> $GITHUB_STEP_SUMMARY
          echo "**Pre-release:** ${{ steps.version.outputs.prerelease }}" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "### ðŸ“¦ Artifacts" >> $GITHUB_STEP_SUMMARY
          ls -lh artifacts/ >> $GITHUB_STEP_SUMMARY
