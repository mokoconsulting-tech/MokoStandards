name: Test Suite

on:
  push:
    branches:
      - main
      - dev/**
      - rc/**
  pull_request:
    branches:
      - main
      - dev/**
      - rc/**
  workflow_dispatch:

permissions:
  contents: read

jobs:
  phpunit:
    name: PHPUnit Tests (PHP ${{ matrix.php-version }})
    runs-on: ubuntu-latest
    
    strategy:
      fail-fast: false
      matrix:
        php-version: ['7.4', '8.0', '8.1', '8.2']
        joomla-version: ['4.4', '5.0']
        exclude:
          - php-version: '7.4'
            joomla-version: '5.0'
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup PHP ${{ matrix.php-version }}
        uses: shivammathur/setup-php@v2
        with:
          php-version: ${{ matrix.php-version }}
          extensions: mbstring, xml, mysqli, zip, gd
          coverage: xdebug
          tools: composer:v2

      - name: Validate composer.json
        run: composer validate --strict
        if: hashFiles('composer.json') != ''

      - name: Install dependencies
        run: composer install --prefer-dist --no-progress
        if: hashFiles('composer.json') != ''

      - name: Run PHPUnit tests
        run: |
          if [ -f "vendor/bin/phpunit" ]; then
            vendor/bin/phpunit --coverage-text --coverage-clover=coverage.xml
          elif [ -f "phpunit.xml" ] || [ -f "phpunit.xml.dist" ]; then
            php vendor/phpunit/phpunit/phpunit --coverage-text --coverage-clover=coverage.xml
          else
            echo "No PHPUnit configuration found"
            exit 0
          fi

      - name: Upload coverage to Codecov
        uses: codecov/codecov-action@v3
        if: matrix.php-version == '8.1' && matrix.joomla-version == '5.0'
        with:
          file: ./coverage.xml
          flags: unittests
          name: codecov-joomla

  code-quality:
    name: Code Quality Checks
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup PHP
        uses: shivammathur/setup-php@v2
        with:
          php-version: '8.1'
          extensions: mbstring, xml
          tools: composer:v2, phpstan, psalm, phpcs

      - name: Install dependencies
        run: composer install --prefer-dist --no-progress
        if: hashFiles('composer.json') != ''

      - name: Run PHP_CodeSniffer
        run: |
          if [ -f "phpcs.xml" ] || [ -f "phpcs.xml.dist" ]; then
            phpcs --standard=phpcs.xml --report=summary --report-width=120
          elif [ -f "vendor/bin/phpcs" ]; then
            vendor/bin/phpcs --standard=Joomla --report=summary src/
          else
            echo "No PHPCS configuration found, skipping"
          fi
        continue-on-error: true

      - name: Run PHPStan
        run: |
          if [ -f "phpstan.neon" ] || [ -f "phpstan.neon.dist" ]; then
            phpstan analyse --no-progress
          elif [ -f "vendor/bin/phpstan" ]; then
            vendor/bin/phpstan analyse src/ --level=5
          else
            echo "No PHPStan configuration found, skipping"
          fi
        continue-on-error: true

      - name: Run Psalm
        run: |
          if [ -f "psalm.xml" ] || [ -f "psalm.xml.dist" ]; then
            psalm --no-progress --output-format=github
          elif [ -f "vendor/bin/psalm" ]; then
            vendor/bin/psalm --init src/ 8 || true
            vendor/bin/psalm --no-progress
          else
            echo "No Psalm configuration found, skipping"
          fi
        continue-on-error: true

  integration:
    name: Integration Tests (Joomla ${{ matrix.joomla-version }})
    runs-on: ubuntu-latest
    
    services:
      mysql:
        image: mysql:8.0
        env:
          MYSQL_ROOT_PASSWORD: root
          MYSQL_DATABASE: joomla_test
        ports:
          - 3306:3306
        options: >-
          --health-cmd="mysqladmin ping"
          --health-interval=10s
          --health-timeout=5s
          --health-retries=3
    
    strategy:
      matrix:
        joomla-version: ['4.4', '5.0']
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup PHP
        uses: shivammathur/setup-php@v2
        with:
          php-version: '8.1'
          extensions: mbstring, xml, mysqli, zip, gd
          tools: composer:v2

      - name: Install Joomla ${{ matrix.joomla-version }}
        run: |
          # Download and setup Joomla for integration testing
          echo "Setting up Joomla ${{ matrix.joomla-version }} for integration tests"
          # Add your Joomla installation script here

      - name: Install extension
        run: |
          # Install your extension into Joomla
          echo "Installing extension for integration testing"
          # Add your extension installation script here

      - name: Run integration tests
        run: |
          if [ -d "tests/Integration" ]; then
            vendor/bin/phpunit --testsuite Integration
          else
            echo "No integration tests found"
          fi

  summary:
    name: Test Summary
    runs-on: ubuntu-latest
    needs: [phpunit, code-quality, integration]
    if: always()
    
    steps:
      - name: Check test results
        run: |
          echo "### Test Execution Summary" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "- Repository: $GITHUB_REPOSITORY" >> $GITHUB_STEP_SUMMARY
          echo "- Branch: $GITHUB_REF_NAME" >> $GITHUB_STEP_SUMMARY
          echo "- Commit: $GITHUB_SHA" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "All test suites completed." >> $GITHUB_STEP_SUMMARY
