{
    "name": "mokoconsulting/mokostandards",
    "description": "MokoStandards - Enterprise standards and automation framework (PHP implementation)",
    "type": "library",
    "version": "04.00.01",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Moko Consulting",
            "email": "hello@mokoconsulting.tech"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.8",
        "monolog/monolog": "^3.5",
        "symfony/console": "^6.4",
        "symfony/yaml": "^6.4",
        "symfony/filesystem": "^6.4",
        "symfony/process": "^6.4",
        "symfony/finder": "^6.4",
        "symfony/http-foundation": "^6.4",
        "symfony/routing": "^6.4",
        "symfony/cache": "^6.4",
        "twig/twig": "^3.8",
        "vlucas/phpdotenv": "^5.6",
        "psr/log": "^3.0",
        "psr/http-client": "^1.0",
        "psr/cache": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10 || ^2.0",
        "squizlabs/php_codesniffer": "^3.8 || ^4.0",
        "vimeo/psalm": "^5.20",
        "phpmd/phpmd": "^2.14"
    },
    "autoload": {
        "psr-4": {
            "MokoStandards\\": "src/",
            "MokoStandards\\Enterprise\\": "src/Enterprise/",
            "MokoStandards\\Automation\\": "src/Automation/",
            "MokoStandards\\Validation\\": "src/Validation/",
            "MokoStandards\\Web\\": "src/Web/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "MokoStandards\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=PSR12 src/",
        "phpstan": "phpstan analyse src/ --level=max",
        "psalm": "psalm",
        "check": [
            "@phpcs",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    }
}
