<mokostandards-override version="1.0">
  <metadata>
    <name>MokoStandards Repository Override</name>
    <description>
      This file prevents the bulk_update_repos.py script from recreating
      "live" workflow files in the MokoStandards repository itself.
      
      MokoStandards is a template/standards repository, so it should only
      contain workflow templates and MokoStandards-specific automation,
      not the "live" versions of workflows that get synced TO other repos.
    </description>
    <repository-type>standards</repository-type>
    <compliance-level>strict</compliance-level>
    <config-version>1.0</config-version>
  </metadata>

  <sync>
    <enabled>true</enabled>
    
    <exclude-files>
      <!-- 
        Files to exclude from sync
        These are "live" workflows that should NOT exist in MokoStandards
        because they are templates that get synced TO other repos
      -->
      <file path=".github/workflows/build.yml" reason="corresponds to templates/workflows/build-universal.yml.template"/>
      <file path=".github/workflows/code-quality.yml" reason="corresponds to templates/workflows/code-quality.yml.template"/>
      <file path=".github/workflows/dependency-review.yml" reason="corresponds to templates/workflows/generic/dependency-review.yml.template"/>
      <file path=".github/workflows/deploy-to-dev.yml" reason="template only, not active in MokoStandards"/>
      <file path=".github/workflows/release-cycle.yml" reason="corresponds to templates/workflows/release-cycle.yml.template"/>
      <file path=".github/workflows/codeql-analysis.yml" reason="corresponds to templates/workflows/generic/codeql-analysis.yml"/>
    </exclude-files>

    <protected-files>
      <!-- 
        Files that should never be overwritten (always preserved)
      -->
      <file path=".gitignore" reason="Repository-specific ignore patterns"/>
      <file path=".editorconfig" reason="Repository-specific editor config"/>
      <file path="MokoStandards.override.xml" reason="This override file itself"/>
      
      <!-- Keep MokoStandards-specific workflows -->
      <file path=".github/workflows/standards-compliance.yml" reason="MokoStandards-specific workflow"/>
      <file path=".github/workflows/changelog_update.yml" reason="MokoStandards-specific workflow"/>
      <file path=".github/workflows/bulk-repo-sync.yml" reason="MokoStandards-specific workflow"/>
      <file path=".github/workflows/confidentiality-scan.yml" reason="MokoStandards-specific workflow"/>
      <file path=".github/workflows/repo-health.yml" reason="MokoStandards-specific workflow"/>
      <file path=".github/workflows/auto-create-org-projects.yml" reason="MokoStandards-specific workflow"/>
      <file path=".github/workflows/sync-changelogs.yml" reason="MokoStandards-specific workflow"/>
      
      <!-- Keep reusable workflows (these are meant to be called, not synced) -->
      <file path=".github/workflows/reusable-build.yml" reason="Reusable workflow template"/>
      <file path=".github/workflows/reusable-ci-validation.yml" reason="Reusable workflow template"/>
      <file path=".github/workflows/reusable-release.yml" reason="Reusable workflow template"/>
      <file path=".github/workflows/reusable-php-quality.yml" reason="Reusable workflow template"/>
      <file path=".github/workflows/reusable-platform-testing.yml" reason="Reusable workflow template"/>
      <file path=".github/workflows/reusable-project-detector.yml" reason="Reusable workflow template"/>
      
      <!-- Keep enterprise firewall setup workflow -->
      <file path=".github/workflows/enterprise-firewall-setup.yml" reason="MokoStandards-specific workflow"/>
    </protected-files>
  </sync>
</mokostandards-override>
